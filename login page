<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aadhaar KYC Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react/18.2.0/umd/react.production.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/react-dom/18.2.0/umd/react-dom.production.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/7.22.10/babel.min.js"></script>
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .card-header {
            background: #0d6efd;
            color: white;
            text-align: center;
            padding: 20px;
        }
        .form-control {
            padding: 12px;
            border-radius: 8px;
        }
        .btn-option {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 12px;
            text-align: center;
            margin-bottom: 10px;
            transition: all 0.3s;
            cursor: pointer;
        }
        .btn-option:hover {
            background-color: #f8f9fa;
            border-color: #0d6efd;
            transform: translateY(-2px);
        }
        .separator {
            display: flex;
            align-items: center;
            text-align: center;
            color: #6c757d;
            margin: 20px 0;
        }
        .separator::before,
        .separator::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #dee2e6;
        }
        .separator:not(:empty)::before {
            margin-right: .25em;
        }
        .separator:not(:empty)::after {
            margin-left: .25em;
        }
        .uid-display {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-top: 20px;
            text-align: center;
            font-weight: bold;
            color: #0d6efd;
        }
        .step-progress {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        .step {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        .step.active {
            background-color: #0d6efd;
            color: white;
        }
        .step-line {
            flex-grow: 1;
            height: 2px;
            background-color: #e9ecef;
            margin: 0 10px;
            align-self: center;
        }
        .modal-content {
            border-radius: 15px;
        }
        .terms-content {
            height: 300px;
            overflow-y: auto;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 8px;
        }
        .password-strength {
            height: 5px;
            margin-top: 5px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        .tooltip-icon {
            cursor: pointer;
            color: #6c757d;
        }
        .language-selector {
            width: 140px;
        }
    </style>
</head>
<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect } = React;

        const AadhaarKycPortal = () => {
            const [activeTab, setActiveTab] = useState('login');
            const [password, setPassword] = useState('');
            const [confirmPassword, setConfirmPassword] = useState('');
            const [passwordStrength, setPasswordStrength] = useState({ width: '0%', backgroundColor: '#dc3545' });
            const [passwordFeedback, setPasswordFeedback] = useState('');
            const [confirmFeedback, setConfirmFeedback] = useState('');
            const [showUid, setShowUid] = useState(false);
            const [generatedUid, setGeneratedUid] = useState('');
            const [termsAccepted, setTermsAccepted] = useState(false);
            const [selectedLanguage, setSelectedLanguage] = useState('en');
            const [pincode, setPincode] = useState('');
            const [sector, setSector] = useState('');
            const [sectorInfo, setSectorInfo] = useState('');

            // Sample database of pincodes and sectors
            const pincodeDatabase = {
                '560001': { sector: 'Bengaluru', pools: ['IT Sector', 'Education', 'Healthcare'] },
                '560002': { sector: 'Bengaluru', pools: ['Manufacturing', 'Real Estate', 'Logistics'] },
                '570001': { sector: 'Mysore', pools: ['Tourism', 'Handicrafts', 'Silk Industry'] },
                '570002': { sector: 'Mysore', pools: ['Education', 'Agriculture', 'Textiles'] },
                '110001': { sector: 'Delhi', pools: ['Government', 'Healthcare', 'Education'] },
                '400001': { sector: 'Mumbai', pools: ['Finance', 'Entertainment', 'Logistics'] },
                '600001': { sector: 'Chennai', pools: ['Automobile', 'IT Sector', 'Healthcare'] }
            };

            // Language options
            const languages = [
                { code: 'en', name: 'English' },
                { code: 'hi', name: 'Hindi' },
                { code: 'kn', name: 'Kannada' },
                { code: 'ta', name: 'Tamil' },
                { code: 'te', name: 'Telugu' },
                { code: 'ml', name: 'Malayalam' }
            ];

            // Language translations
            const translations = {
                en: {
                    title: 'Aadhaar KYC Portal',
                    subtitle: 'Secure login and registration with Aadhaar verification',
                    login: 'Login',
                    signup: 'Sign Up',
                    aadhaarNumber: 'Aadhaar Number',
                    mobileNumber: 'Mobile Number (as per Aadhaar)',
                    createPassword: 'Create Password',
                    confirmPassword: 'Confirm Password',
                    or: 'OR',
                    signupWith: 'Sign up with',
                    verifyCreate: 'Verify & Create Account',
                    agreeTerms: 'I agree to the Terms of Service and Privacy Policy',
                    forgotPassword: 'Forgot Password?',
                    rememberMe: 'Remember me',
                    sectorInfo: 'Your Sector Information',
                    selectLanguage: 'Select Language',
                    pincode: 'Pincode',
                    pincodePlaceholder: 'Enter your 6-digit pincode'
                },
                hi: {
                    title: 'आधार केवाईसी पोर्टल',
                    subtitle: 'आधार सत्यापन के साथ सुरक्षित लॉगिन और पंजीकरण',
                    login: 'लॉगिन',
                    signup: 'साइन अप',
                    aadhaarNumber: 'आधार नंबर',
                    mobileNumber: 'मोबाइल नंबर (आधार के अनुसार)',
                    createPassword: 'पासवर्ड बनाएं',
                    confirmPassword: 'पासवर्ड की पुष्टि करें',
                    or: 'या',
                    signupWith: 'के साथ साइन अप करें',
                    verifyCreate: 'सत्यापित करें और खाता बनाएं',
                    agreeTerms: 'मैं सेवा की शर्तों और गोपनीयता नीति से सहमत हूं',
                    forgotPassword: 'पासवर्ड भूल गए?',
                    rememberMe: 'मुझे याद रखें',
                    sectorInfo: 'आपका क्षेत्र जानकारी',
                    selectLanguage: 'भाषा चुनें',
                    pincode: 'पिनकोड',
                    pincodePlaceholder: 'अपना 6-अंकीय पिनकोड दर्ज करें'
                },
                kn: {
                    title: 'ಆಧಾರ್ KYC ಪೋರ್ಟಲ್',
                    subtitle: 'ಆಧಾರ್ ಪರಿಶೀಲನೆಯೊಂದಿಗೆ ಸುರಕ್ಷಿತ ಲಾಗಿನ್ ಮತ್ತು ನೋಂದಣಿ',
                    login: 'ಲಾಗಿನ್',
                    signup: 'ಸೈನ್ ಅಪ್',
                    aadhaarNumber: 'ಆಧಾರ್ ಸಂಖ್ಯೆ',
                    mobileNumber: 'ಮೊಬೈಲ್ ನಂಬರ್ (ಆಧಾರ್ ಪ್ರಕಾರ)',
                    createPassword: 'ಪಾಸ್ವರ್ಡ್ ರಚಿಸಿ',
                    confirmPassword: 'ಪಾಸ್ವರ್ಡ್ ದೃಢೀಕರಿಸಿ',
                    or: 'ಅಥವಾ',
                    signupWith: 'ಜೊತೆಗೆ ಸೈನ್ ಅಪ್ ಮಾಡಿ',
                    verifyCreate: 'ಪरಿಶೀಲಿಸಿ ಮತ್ತು ಖಾತೆ ರಚಿಸಿ',
                    agreeTerms: 'ನಾನು ಸೇವಾ ನಿಯಮಗಳು ಮತ್ತು ಗೌಪ್ಯತಾ ನೀತಿಗೆ ಸಮ್ಮತಿಸುತ್ತೇನೆ',
                    forgotPassword: 'ಪಾಸ್ವರ್ಡ್ ಮರೆತಿರಾ?',
                    rememberMe: 'ನನ್ನನ್ನು ನೆನಪಿಡಿ',
                    sectorInfo: 'ನಿಮ್ಮ ಸೆಕ್ಟರ್ ಮಾಹಿತಿ',
                    selectLanguage: 'ಭಾಷೆ ಆಯ್ಕೆಮಾಡಿ',
                    pincode: 'ಪಿನ್‌ಕೋಡ್',
                    pincodePlaceholder: 'ನಿಮ್ಮ 6-ಅಂಕಿಯ ಪಿನ್‌ಕೋಡ್ ನಮೂದಿಸಿ'
                }
            };

            const t = translations[selectedLanguage];

            // Password strength calculator
            useEffect(() => {
                if (password.length === 0) {
                    setPasswordStrength({ width: '0%', backgroundColor: '#dc3545' });
                    setPasswordFeedback('');
                    return;
                }

                let strength = 0;
                let feedback = '';

                if (password.length >= 8) strength++;
                if (/[A-Z]/.test(password)) strength++;
                if (/[a-z]/.test(password)) strength++;
                if (/[0-9]/.test(password)) strength++;
                if (/[^A-Za-z0-9]/.test(password)) strength++;

                switch(strength) {
                    case 0:
                    case 1:
                        setPasswordStrength({ width: '20%', backgroundColor: '#dc3545' });
                        feedback = 'Very weak password';
                        break;
                    case 2:
                        setPasswordStrength({ width: '40%', backgroundColor: '#fd7e14' });
                        feedback = 'Weak password';
                        break;
                    case 3:
                        setPasswordStrength({ width: '60%', backgroundColor: '#ffc107' });
                        feedback = 'Medium strength password';
                        break;
                    case 4:
                        setPasswordStrength({ width: '80%', backgroundColor: '#20c997' });
                        feedback = 'Strong password';
                        break;
                    case 5:
                        setPasswordStrength({ width: '100%', backgroundColor: '#198754' });
                        feedback = 'Very strong password';
                        break;
                    default:
                        break;
                }

                setPasswordFeedback(feedback);
            }, [password]);

            // Confirm password validation
            useEffect(() => {
                if (confirmPassword.length === 0) {
                    setConfirmFeedback('');
                    return;
                }

                if (confirmPassword !== password) {
                    setConfirmFeedback('Passwords do not match');
                } else {
                    setConfirmFeedback('Passwords match');
                }
            }, [confirmPassword, password]);

            // Pincode validation and sector detection
            useEffect(() => {
                if (pincode.length === 6) {
                    if (pincodeDatabase[pincode]) {
                        const sectorData = pincodeDatabase[pincode];
                        setSector(sectorData.sector);
                        setSectorInfo(`You belong to ${sectorData.sector} sector. Available pools: ${sectorData.pools.join(', ')}.`);
                    } else {
                        setSector('');
                        setSectorInfo('Pincode not found in our database. Please contact support.');
                    }
                } else {
                    setSector('');
                    setSectorInfo('');
                }
            }, [pincode]);

            // Generate UID function
            const generateRandomAlphaNumeric = (length) => {
                const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
                let result = '';
                for (let i = 0; i < length; i++) {
                    result += chars.charAt(Math.floor(Math.random() * chars.length));
                }
                return result;
            };

            // Handle sign up form submission
            const handleSignUp = (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                const aadharNumber = formData.get('aadharNumber');
                const mobileNumber = formData.get('mobileNumber');
                
                if (!/^\d{12}$/.test(aadharNumber)) {
                    alert('Please enter a valid 12-digit Aadhaar number');
                    return;
                }
                
                if (!/^\d{10}$/.test(mobileNumber)) {
                    alert('Please enter a valid 10-digit mobile number');
                    return;
                }
                
                if (pincode.length !== 6) {
                    alert('Please enter a valid 6-digit pincode');
                    return;
                }
                
                if (!sector) {
                    alert('Please enter a valid pincode to determine your sector');
                    return;
                }
                
                if (password.length < 8) {
                    alert('Password must be at least 8 characters long');
                    return;
                }
                
                if (!/(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9])/.test(password)) {
                    alert('Password must include uppercase, lowercase, number, and special character');
                    return;
                }
                
                if (password !== confirmPassword) {
                    alert('Passwords do not match');
                    return;
                }
                
                if (!termsAccepted) {
                    alert('You must agree to the Terms of Service and Privacy Policy');
                    return;
                }
                
                // Generate UID (first 4 from Aadhaar + 8 random alphanumeric)
                const firstFour = aadharNumber.substring(0, 4);
                const randomPart = generateRandomAlphaNumeric(8);
                const uid = firstFour + randomPart;
                
                setGeneratedUid(uid);
                setShowUid(true);
                
                alert(`Account created successfully! Your UID: ${uid}\nSector: ${sector}\nPlease save this UID for future logins.`);
            };

            // Handle login form submission
            const handleLogin = (e) => {
                e.preventDefault();
                const formData = new FormData(e.target);
                const aadharNumber = formData.get('loginAadhar');
                const password = formData.get('loginPassword');
                
                if (!/^\d{12}$/.test(aadharNumber)) {
                    alert('Please enter a valid 12-digit Aadhaar number');
                    return;
                }
                
                if (password.length < 1) {
                    alert('Please enter your password');
                    return;
                }
                
                alert('Login successful! Redirecting to dashboard...');
            };

            return (
                <div className="container">
                    <div className="row justify-content-center">
                        <div className="col-md-8">
                            <div className="card">
                                <div className="card-header">
                                    <div className="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h3><i className="fas fa-id-card me-2"></i>{t.title}</h3>
                                            <p className="mb-0">{t.subtitle}</p>
                                        </div>
                                        <div>
                                            <select 
                                                className="form-select form-select-sm language-selector"
                                                value={selectedLanguage}
                                                onChange={(e) => setSelectedLanguage(e.target.value)}
                                            >
                                                {languages.map(lang => (
                                                    <option key={lang.code} value={lang.code}>{lang.name}</option>
                                                ))}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div className="card-body p-5">
                                    {/* Step Progress */}
                                    <div className="step-progress">
                                        <div className="step active">1</div>
                                        <div className="step-line"></div>
                                        <div className="step">2</div>
                                        <div className="step-line"></div>
                                        <div className="step">3</div>
                                    </div>

                                    <ul className="nav nav-pills mb-4 justify-content-center" role="tablist">
                                        <li className="nav-item" role="presentation">
                                            <button 
                                                className={`nav-link ${activeTab === 'login' ? 'active' : ''}`}
                                                onClick={() => setActiveTab('login')}
                                            >
                                                {t.login}
                                            </button>
                                        </li>
                                        <li className="nav-item" role="presentation">
                                            <button 
                                                className={`nav-link ${activeTab === 'signup' ? 'active' : ''}`}
                                                onClick={() => setActiveTab('signup')}
                                            >
                                                {t.signup}
                                            </button>
                                        </li>
                                    </ul>
                                    
                                    {/* Login Tab */}
                                    {activeTab === 'login' && (
                                        <form onSubmit={handleLogin}>
                                            <div className="mb-3">
                                                <label htmlFor="loginAadhar" className="form-label">{t.aadhaarNumber}</label>
                                                <input 
                                                    type="text" 
                                                    className="form-control" 
                                                    id="loginAadhar" 
                                                    name="loginAadhar"
                                                    placeholder="Enter 12-digit Aadhaar number" 
                                                    required 
                                                />
                                            </div>
                                            <div className="mb-3">
                                                <label htmlFor="loginPassword" className="form-label">Password</label>
                                                <input 
                                                    type="password" 
                                                    className="form-control" 
                                                    id="loginPassword" 
                                                    name="loginPassword"
                                                    placeholder="Enter your password" 
                                                    required 
                                                />
                                            </div>
                                            <div className="mb-3 form-check">
                                                <input type="checkbox" className="form-check-input" id="rememberMe" />
                                                <label className="form-check-label" htmlFor="rememberMe">{t.rememberMe}</label>
                                            </div>
                                            <div className="d-grid">
                                                <button type="submit" className="btn btn-primary btn-lg">{t.login}</button>
                                            </div>
                                            <div className="text-center mt-3">
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">{t.forgotPassword}</a>
                                            </div>
                                        </form>
                                    )}
                                    
                                    {/* Sign Up Tab */}
                                    {activeTab === 'signup' && (
                                        <form onSubmit={handleSignUp}>
                                            <div className="mb-3">
                                                <label htmlFor="aadharNumber" className="form-label">{t.aadhaarNumber}</label>
                                                <input 
                                                    type="text" 
                                                    className="form-control" 
                                                    id="aadharNumber" 
                                                    name="aadharNumber"
                                                    placeholder="Enter 12-digit Aadhaar number" 
                                                    required 
                                                />
                                            </div>
                                            <div className="mb-3">
                                                <label htmlFor="mobileNumber" className="form-label">{t.mobileNumber}</label>
                                                <input 
                                                    type="tel" 
                                                    className="form-control" 
                                                    id="mobileNumber" 
                                                    name="mobileNumber"
                                                    placeholder="Enter registered mobile number" 
                                                    required 
                                                />
                                            </div>

                                            <div className="mb-3">
                                                <label htmlFor="pincode" className="form-label">{t.pincode}</label>
                                                <input 
                                                    type="text" 
                                                    className="form-control" 
                                                    id="pincode" 
                                                    value={pincode}
                                                    onChange={(e) => setPincode(e.target.value.replace(/\D/, '').slice(0, 6))}
                                                    placeholder={t.pincodePlaceholder}
                                                    required 
                                                />
                                                {sectorInfo && (
                                                    <div className="form-text text-info mt-2">
                                                        <i className="fas fa-info-circle me-1"></i>
                                                        {sectorInfo}
                                                    </div>
                                                )}
                                            </div>
                                            
                                            {/* Password Creation Section */}
                                            <div className="mb-3">
                                                <label htmlFor="newPassword" className="form-label">
                                                    {t.createPassword}
                                                    <i className="fas fa-info-circle tooltip-icon ms-1" data-bs-toggle="tooltip" title="Password must be at least 8 characters long and include uppercase, lowercase, number, and special character"></i>
                                                </label>
                                                <input 
                                                    type="password" 
                                                    className="form-control" 
                                                    id="newPassword" 
                                                    value={password}
                                                    onChange={(e) => setPassword(e.target.value)}
                                                    placeholder="Create a strong password" 
                                                    required 
                                                />
                                                <div className="password-strength" style={passwordStrength}></div>
                                                <small className="form-text text-muted">{passwordFeedback}</small>
                                            </div>
                                            
                                            <div className="mb-3">
                                                <label htmlFor="confirmPassword" className="form-label">{t.confirmPassword}</label>
                                                <input 
                                                    type="password" 
                                                    className="form-control" 
                                                    id="confirmPassword" 
                                                    value={confirmPassword}
                                                    onChange={(e) => setConfirmPassword(e.target.value)}
                                                    placeholder="Confirm your password" 
                                                    required 
                                                />
                                                <small className={`form-text ${confirmFeedback === 'Passwords match' ? 'text-success' : 'text-danger'}`}>
                                                    {confirmFeedback}
                                                </small>
                                            </div>
                                            
                                            <div className="separator">{t.or}</div>
                                            
                                            <p className="text-center mb-3">{t.signupWith}</p>
                                            
                                            <div className="row">
                                                <div className="col-md-4">
                                                    <div className="btn-option" data-bs-toggle="modal" data-bs-target="#digilockerModal">
                                                        <i className="fas fa-lock fa-2x mb-2"></i>
                                                        <p>DigiLocker</p>
                                                    </div>
                                                </div>
                                                <div className="col-md-4">
                                                    <div className="btn-option" data-bs-toggle="modal" data-bs-target="#googleModal">
                                                        <i className="fab fa-google fa-2x mb-2"></i>
                                                        <p>Google</p>
                                                    </div>
                                                </div>
                                                <div className="col-md-4">
                                                    <div className="btn-option" data-bs-toggle="modal" data-bs-target="#contactModal">
                                                        <i className="fas fa-mobile-alt fa-2x mb-2"></i>
                                                        <p>Contact Details</p>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div className="d-grid mt-4">
                                                <button type="submit" className="btn btn-primary btn-lg">{t.verifyCreate}</button>
                                            </div>
                                            
                                            <div className="form-check mt-3">
                                                <input 
                                                    type="checkbox" 
                                                    className="form-check-input" 
                                                    id="termsCheck" 
                                                    checked={termsAccepted}
                                                    onChange={(e) => setTermsAccepted(e.target.checked)}
                                                    required 
                                                />
                                                <label className="form-check-label" htmlFor="termsCheck">
                                                    {t.agreeTerms}
                                                </label>
                                            </div>
                                            
                                            {showUid && (
                                                <div className="uid-display mt-4">
                                                    <i className="fas fa-key me-2"></i>Your Generated UID: <span id="generatedUID">{generatedUid}</span>
                                                    <div className="mt-2">
                                                        <i className="fas fa-map-marker-alt me-2"></i>Sector: <strong>{sector}</strong>
                                                    </div>
                                                </div>
                                            )}
                                        </form>
                                    )}
                                </div>
                                <div className="card-footer text-center">
                                    <p>By using this service, you agree to our <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms of Service</a> and <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal">Privacy Policy</a></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* Forgot Password Modal */}
                    <div className="modal fade" id="forgotPasswordModal" tabIndex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
                        <div className="modal-dialog">
                            <div className="modal-content">
                                <div className="modal-header">
                                    <h5 className="modal-title" id="forgotPasswordModalLabel">Reset Password</h5>
                                    <button type="button" className="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
